{
    "info": {
        "_postman_id": "currency-converter-api",
        "name": "Currency Converter API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get Currency Rates from CBR",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:8080/currency/rates",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "currency",
                        "rates"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Get Currency Rate by Code",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:8080/currency/rate?val=USD&amount=100.50",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "currency",
                        "rate"
                    ],
                    "query": [
                        {
                            "key": "val",
                            "value": "USD"
                        },
                        {
                            "key": "amount",
                            "value": "100.50"
                        }
                    ]
                }
            },
            "response": []
        },
